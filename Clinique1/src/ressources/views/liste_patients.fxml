<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.clinique.controller.ListePatientsController"
            prefWidth="600" prefHeight="500">

    <VBox fx:id="rootVBox" spacing="10" prefWidth="1200" prefHeight="700">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Liste des Patients" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tablePatients" prefHeight="400" prefWidth="560" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="100"/>
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colSexe" text="Sexe" prefWidth="80"/>
                <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="100"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Ajouter un patient" onAction="#handleAjouterPatient"/>
        </HBox>
    </VBox>
</AnchorPane>
