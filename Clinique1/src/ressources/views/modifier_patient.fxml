<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.java.clinique.controller.ModifierPatientController"
            prefWidth="400" prefHeight="500">

    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="20" prefWidth="300">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Modifier un Patient" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="tfNom" promptText="Nom"/>
        <TextField fx:id="tfPrenom" promptText="Prénom"/>
        <DatePicker fx:id="dpNaissance" promptText="Date de naissance"/>
        <TextField fx:id="tfSexe" promptText="Sexe (M/F)"/>
        <TextField fx:id="tfTelephone" promptText="Téléphone"/>
        <TextField fx:id="tfEmail" promptText="Email"/>
        <TextField fx:id="tfAdresse" promptText="Adresse"/>

        <Label fx:id="lblErreur" textFill="red"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Enregistrer" onAction="#handleEnregistrer"/>
            <Button text="Annuler" onAction="#handleAnnuler"/>
        </HBox>
    </VBox>
</AnchorPane>
